        <Label x:Name="Ldate1" Content="" HorizontalAlignment="Left" Margin="476,169,0,0" VerticalAlignment="Top" Width="99" Visibility="Hidden" FontSize="10" FontStyle="Italic" Background="#00000000" Opacity="0.7" Foreground="#000000"/>
