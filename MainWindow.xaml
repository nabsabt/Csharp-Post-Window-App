        <Label x:Name="LsentTitle1" Content="" HorizontalAlignment="Left" Margin="676,66,0,0" VerticalAlignment="Top" Height="25" Width="100"/>
        <Button x:Name="BdeletePost1" Content="Delete" HorizontalAlignment="Left" Margin="738,167,0,0" VerticalAlignment="Top" Visibility="Hidden" Click="BdeletePost1_Click" FontWeight="Bold"/>
        <TextBlock x:Name="TblockSentPost1" HorizontalAlignment="Left" Margin="476,96,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="56" Width="300" TextTrimming="WordEllipsis" FontStyle="Italic"/>
